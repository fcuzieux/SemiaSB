{
  "manifest_version": 3,
  "name": "SemiaSB",
  "version": "1.0",
  "description": "Enregistre onglets avec audio/vidéo",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  
  "permissions": [
    "tabCapture",
    "tabs",
    "activeTab",
    "sidePanel",
    "downloads",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Ouvrir le panneau latéral"
  }
}
